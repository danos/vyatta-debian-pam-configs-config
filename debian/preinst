# preinst script for vyatta-debian-pam-configs-config
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

pkg=vyatta-debian-pam-configs-config

case "$1" in
    install|upgrade)
	for file in atd cron login sshd passwd; do
	    if ! [ -e /etc/pam.d/${file}.debian ]; then
	    	dpkg-divert --package ${pkg} --add --rename \
			--divert /etc/pam.d/${file}.debian /etc/pam.d/${file}
 	    fi
	    if ! [ -L /etc/pam.d/${file} ]; then
	    	ln -sf /etc/pam.d/${file}.vyatta /etc/pam.d/${file}
 	    fi
	done
	if ! [ -e /etc/pam.d/auditd.debian ]; then
	    pam-auth-update --package --remove auditd
	    dpkg-divert --package ${pkg} --add --rename \
                --divert /usr/share/pam-configs/auditd.debian \
	        /usr/share/pam-configs/auditd
 	fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
